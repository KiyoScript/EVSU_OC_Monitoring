<tr class="text-center">
  <td><%= student.student_id %></td>
  <td><%= student.last_name %></td>
  <td><%= student.given_name %></td>
  <td><%= student.middle_name %></td>
  <td><%= student.program %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-dark dropdown-toggle" type="button" data-coreui-toggle="dropdown" aria-expanded="false">
        Actions
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= student.student_id %>">
        <li>
          <%= link_to edit_student_path(student), class: "dropdown-item" do %>
            <i class="fa-duotone fa-edit me-2"></i>
            Edit
          <% end %>
        </li>
        <li>
          <%= link_to student_path(student), class: "dropdown-item", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove '#{student.last_name}'?" } do %>
            <i class="fa-duotone fa-trash-can-xmark me-2"></i>
            Remove
          <% end %>
        </li>
      </ul>
    </div>
  </td>
</tr>
