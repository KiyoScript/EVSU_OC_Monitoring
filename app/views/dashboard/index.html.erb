<% if user_signed_in? %>
  <h2 class="p-5 text-primary">Overview</h2>
  <div class="row p-0 px-5 gap-2">
    <div class="col">
      <div class="card text-center border rounded bg-info">
        <div class="card-body">
          <%= link_to department_index_path, class:'text-decoration-none' do %>
            <i class="fa-duotone fa-building fa-2x text-white"></i>
            <p class="mt-2 text-white">Total Departments</p>
            <p class="text-white"><%= Department.count %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card text-center border rounded bg-success">
        <div class="card-body">
          <%= link_to employees_path, class:'text-decoration-none' do %>
            <i class="fa-duotone fa-users fa-2x text-white"></i>
            <p class="mt-2 text-white">Total Employees</p>
            <p class="text-white"><%= Employee.count %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card text-center border rounded bg-warning">
        <div class="card-body">
          <%= link_to students_path, class:'text-decoration-none' do %>
            <i class="fa-duotone fa-user-graduate fa-2x text-white"></i>
            <p class="mt-2 text-white">Today's Students</p>
            <p class="text-white"><%= Student.count %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card text-center border rounded bg-danger">
        <div class="card-body">
          <%= link_to '#', class:'text-decoration-none' do %>
            <i class="fa-duotone fa-check-circle fa-2x text-white"></i>
            <p class="mt-2 text-white">Today's Attendance</p>
            <p class="text-white">1100</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= turbo_frame_tag :attendance_frame, src: attendances_path do %>
    <center>
      <div class="d-flex justify-content-center p-5 m-5">
        <div class="spinner-border" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </center>
  <% end %>
<% end %>
